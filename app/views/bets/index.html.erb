<div class="container">

<div class="index-category-scroll d-flex mt-3">
  <p class="index-learn-more-button mx-1 d-flex"><%= image_tag("politique.png", class: "smiley-category-scroll-bar") %> Politique</p>
  <p class="index-learn-more-button mx-1 d-flex"><%= image_tag("economie.png", class: "smiley-category-scroll-bar") %> Economie</p>
  <p class="index-learn-more-button mx-1 d-flex"><%= image_tag("sport.png", class: "smiley-category-scroll-bar") %> Sport</p>
  <p class="index-learn-more-button mx-1 d-flex"><%= image_tag("planete.png", class: "smiley-category-scroll-bar") %> Planete</p>
  <p class="index-learn-more-button mx-1 d-flex"><%= image_tag("science.png", class: "smiley-category-scroll-bar") %> Science</p>
  <p class="index-learn-more-button mx-1 d-flex"><%= image_tag("divertissement.png", class: "smiley-category-scroll-bar") %> Divertissement</p>
  <p class="index-learn-more-button mx-1 d-flex"><%= image_tag("sante.png", class: "smiley-category-scroll-bar") %> Sante</p>
  <p class="index-learn-more-button mx-1 d-flex"><%= image_tag("technologie.png", class: "smiley-category-scroll-bar") %> Technologie</p>
  <p class="index-learn-more-button mx-1 d-flex"><%= image_tag("culture.png", class: "smiley-category-scroll-bar") %> Culture</p>
</div>

  <div class="cards">
    <% @bets.each do |bet| %>

      <div class="card index-border-radius-style index-shadow my-3">
        <div class="px-1 pt-1 mx-1">
          <p class="card-title d-inline float-start"><%= bet.hashtag %></p>
        </div>
        <div class="image-position">
          <%= cl_image_tag(bet.photo.key, class: "card-img-top index-border-radius-style", alt: "Image that illustrates the bet") %>
          <p class="tag-position" data-controller="countdown" data-countdown-target='timer' data-countdown-date-value="<%= bet.expiring_at %>"></p>
        </div>
        <div class="pt-3">
          <%# <%= link_to bet_path(bet), class: "text-decoration-none index-learn-more-hover" do %>
            <p class="index-learn-more-button index-learn-more-hover index-shadow"><%= link_to "En savoir plus", bet_path(bet), class: "text-decoration-none" %></p>
          <%# <% end %>
        </div>
        <div class="index-card-grey-background index-bottom-border-radius-style pb-3">
          <p class="index-card-question"><%= bet.question %></p>
          <div class="d-flex justify-content-around">
            <% if bet.bettings == [] %>
              <%= link_to yes_bet_bettings_path(bet), method: :post do %>
                <div class="btn index-button-cote index-button-oui index-shadow">
                  <p>oui</p>
                  <div>
                    <p>cote</p>
                    <p>1.9</p>
                  </div>
                </div>
              <% end %>
              <%= link_to no_bet_bettings_path(bet), method: :post do %>
                <div class="btn index-button-cote index-button-non index-shadow">
                  <p>non</p>
                  <div>
                    <p>cote</p>
                    <p>2.1</p>
                  </div>
                </div>
              <% end %>
            <% else %>
             Tu as vot√©
            <% end %>
          </div>
        </div>
      </div>

    <% end %>
  </div>

</div>
