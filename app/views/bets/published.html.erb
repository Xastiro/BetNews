<%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle mt-5", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
<br>
<%= @current_user.username%>
<br>
<br>
<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to "Mes paris publiés",  published_profile_bets_path, class: "btn-base btn-black" %>
  <%= link_to "Mes paris répondus", profile_bettings_path,       class: "btn-base btn-black-outline" %>
</div>
<br>
<br>
<% @bettings_published.each do |bet| %>
  <%= bet.question %>
  <p class="index-learn-more-button index-learn-more-hover"><%= link_to "+ Relire ce pari", bet_path(bet), class: "text-decoration-none" %></p>
  <p> <%= (bet.expiring_at + 10 - DateTime.now).to_i / 86400 %></p>
<% end %>
