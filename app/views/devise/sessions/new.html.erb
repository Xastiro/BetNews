<div class="container">

  <div class="d-flex justify-content-around pt-5">
    <%= image_tag("logo.png", class: "logo-log-in") %>
  </div>

  <div class="container">
    <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "card-form"} do |f| %>
      <%# <div class="card-form"> %>
        <div class="input">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: {class: "input-field" } %>
        </div>
        <div class="input">
        <%= f.label 'password', class: "input-label" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "input-field" }  %>
        </div>
        <div class="input">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="action">
          <%= f.button :submit, "Log in", input_html: { class: "btn" } %>
        </div>
      <%# </div> %>
    <% end %>
  <div>



  <div class="d-flex justify-content-around">
    <%= render "devise/shared/links" %>
  </div>


</div>
